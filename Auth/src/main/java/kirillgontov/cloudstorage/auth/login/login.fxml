<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-border-color: #00b0f0; -fx-border-width: 3; -fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kirillgontov.cloudstorage.auth.login.LoginController">
   <children>
      <ImageView fitHeight="128.0" fitWidth="128.0" layoutX="236.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../resources/images/cloud-medium.png" />
         </image>
      </ImageView>
      <Label layoutX="156.0" layoutY="160.0" text="Cloud Storage" textAlignment="CENTER" textFill="#46b4ff">
         <font>
            <Font name="Terminator Cyr 4 Semi-expanded Bold" size="20.0" />
         </font>
      </Label>
      <Label layoutX="236.0" layoutY="190.0" text="Kirill Gontov Prod." textAlignment="CENTER">
         <font>
            <Font name="Terminator Cyr 4 Semi-expanded Bold" size="7.0" />
         </font>
      </Label>
      <TextField fx:id="email" alignment="CENTER" focusTraversable="false" layoutX="200.0" layoutY="230.0" prefWidth="200.0" promptText="Email" />
      <Button fx:id="signUpBtn" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#getSignUpScene" style="-fx-background-color: #fff;" text="Sign Up" textAlignment="CENTER" textFill="#46b4ff">
         <font>
            <Font name="Terminator Cyr 4 Semi-expanded Bold" size="11.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <PasswordField fx:id="password" alignment="CENTER" layoutX="200.0" layoutY="270.0" prefWidth="200.0" promptText="Password" />
      <ImageView fitHeight="24.0" fitWidth="24.0" layoutX="156.0" layoutY="231.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../resources/images/username.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="24.0" fitWidth="24.0" layoutX="156.0" layoutY="271.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../resources/images/password.png" />
         </image>
      </ImageView>
      <Button fx:id="logInBtn" onAction="#login" layoutX="200.0" layoutY="320.0" mnemonicParsing="false" prefWidth="200.0" style="-fx-background-color: #46b4ff;" text="Login" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Terminator Cyr 4 Semi-expanded Bold" size="12.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="closeBtn" layoutX="557.0" layoutY="14.0" mnemonicParsing="false" onAction="#closeButtonAction" style="-fx-background-color: #fff;" text="X" textAlignment="CENTER" textFill="#46b4ff">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="Terminator Cyr 4 Semi-expanded Bold" size="11.0" />
         </font>
      </Button>
      <Label fx:id="errorMsg" alignment="CENTER" contentDisplay="CENTER" disable="true" layoutX="22.0" layoutY="369.0" prefHeight="17.0" prefWidth="560.0" textAlignment="CENTER" textFill="RED">
         <font>
            <Font name="Terminator Cyr 4 Semi-expanded Bold" size="11.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
